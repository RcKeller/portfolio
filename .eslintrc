{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "import", "graphql"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "react/prefer-stateless-function": "off",
    "react/prop-types": "off",
    "react/no-danger": "off"
  },
  "overrides": [
    {
      "files": ["*.spec.js", "*.integration.js"],
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}
